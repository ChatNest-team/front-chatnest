<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp">

    <LinearLayout
        android:id="@+id/annoncesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_background"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <ImageView
            android:id="@+id/idivPoster"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/house" />

        <TextView
            android:id="@+id/idtvTitreAnnonce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre de l'annonce"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/idtvPrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/idtvAdresse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adresse"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvNomAgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AjoutÃ© par : Nom de l'agent"
            android:textStyle="italic"
            android:layout_marginTop="8dp" />


        <Button
            android:id="@+id/idbtnContacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacter"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
