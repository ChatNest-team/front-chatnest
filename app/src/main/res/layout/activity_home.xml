<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:padding="16dp">

    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annonces disponibles"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAnnonces"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/homeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clipToPadding="false"/>

    <!-- Exemple d'un élément directement dans le layout -->
    <LinearLayout
        android:id="@+id/itemAnnonceExample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/homeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvTitreAnnonce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre de l'annonce"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvDescriptionAnnonce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Petite description de l'annonce"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvNomAgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouté par : Nom de l'agent"
            android:textStyle="italic"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnContacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacter"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
